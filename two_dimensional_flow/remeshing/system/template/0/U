FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (1.0 0.0 0.0);

boundaryField
{
    outer_cylinder
    {
        type            fixedValue;
        value           $internalField;
    }

    inner
    {
        type            fixedValue;
        value           uniform (0.0 0.0 0.0);
    }

    "(ground|top)"
    {
        type            empty;
    }
}


